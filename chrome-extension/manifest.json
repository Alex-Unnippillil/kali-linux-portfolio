{
  "manifest_version": 3,
  "name": "Reader Mode Companion",
  "version": "1.1",
  "description": "Toggle a clutter-free reader mode with typography and theme controls.",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Toggle Reader Mode"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
