{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "react", "react-dom", "next"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "three-forcegraph": ["types/vendor/three-forcegraph"],
      "three-forcegraph/*": ["types/vendor/three-forcegraph"],
      "three-forcegraph/dist/three-forcegraph": ["types/vendor/three-forcegraph"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "types/**/*.d.ts"],
  "exclude": ["node_modules", "__tests__", "components/apps/archive", "components/apps/kismet"]
}
