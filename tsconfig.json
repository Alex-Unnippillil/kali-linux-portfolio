{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["jest", "node"]
  },
  "include": [
    "next-env.d.ts",
    "app",
    "apps",
    "components",
    "lib",
    "pages",
    "types",
    "utils",
    "workers"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "playwright",
    "scripts",
    ".next"
  ]
}
