{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "app/**/*",
    "apps/**/*",
    "calc/**/*",
    "components/**/*",
    "filters/**/*",
    "games/**/*",
    "hooks/**/*",
    "lib/**/*",
    "modules/**/*",
    "pages/**/*",
    "player/**/*",
    "plugins/**/*",
    "scanner/**/*",
    "src/**/*",
    "styles/**/*",
    "types/**/*",
    "utils/**/*",
    "workers/**/*",
    "middleware.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "__mocks__",
    "tests",
    "playwright",
    "docs",
    "templates",
    "scripts/examples",
    "components/apps/archive",
    "components/apps/kismet",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*",
    "**/*.e2e.*",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
