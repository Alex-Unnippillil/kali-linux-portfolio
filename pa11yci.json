{
  "defaults": {
    "chromeLaunchConfig": {
      "args": ["--no-sandbox"]
    },
    "runners": ["axe", "htmlcs"],
    "standard": "WCAG2AA",
    "axe": {
      "rules": {
        "color-contrast": { "enabled": true }
      }
    }
  },
  "urls": [
    "http://localhost:3000",
    "http://localhost:3000/apps"
  ],
  "scenarios": [
    {},
    {
      "label": "high-contrast",
      "beforeScript": "scripts/a11y-high-contrast.js"
    },
    {
      "label": "desktop-window",
      "beforeScript": "scripts/a11y-open-terminal.js",
      "afterScript": "scripts/a11y-close-terminal.js"
    },
    {
      "label": "desktop-snap-preview",
      "beforeScript": "scripts/a11y-show-snap-preview.js",
      "afterScript": "scripts/a11y-reset-snap-preview.js"
    },
    {
      "label": "desktop-context-menu",
      "beforeScript": "scripts/a11y-open-desktop-context-menu.js",
      "afterScript": "scripts/a11y-close-desktop-context-menu.js"
    }
  ]
}
