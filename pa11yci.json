{
  "defaults": {
    "chromeLaunchConfig": {
      "args": ["--no-sandbox"]
    },
    "runners": ["axe", "htmlcs"],
    "standard": "WCAG2AA",
    "axe": {
      "rules": {
        "color-contrast": { "enabled": true }
      }
    }
  },
  "urls": [
    "http://localhost:3000",
    "http://localhost:3000/apps",
    "http://localhost:3000/apps/contact",
    "http://localhost:3000/apps/settings"
  ],
  "scenarios": [
    {},
    {
      "label": "high-contrast",
      "beforeScript": "scripts/a11y-high-contrast.js"
    }
  ]
}
