{
  "defaults": {
    "chromeLaunchConfig": {
      "args": ["--no-sandbox"]
    },
    "ignore": [
      "color-contrast",
      "nested-interactive",
      "aria-hidden-focus",
      "aria-prohibited-attr",
      "aria-valid-attr-value",
      "WCAG2AA.Principle1.Guideline1_4.1_4_3.G18.Fail",
      "WCAG2AA.Principle2.Guideline2_4.2_4_1.G1,G123,G124.NoSuchID",
      "WCAG2AA.Principle4.Guideline4_1.4_1_1.F77"
    ],
    "runners": ["axe", "htmlcs"],
    "standard": "WCAG2AA",
    "axe": {
      "rules": {
        "color-contrast": { "enabled": true }
      }
    }
  },
  "urls": [
    "http://localhost:3000",
    "http://localhost:3000/apps"
  ],
  "scenarios": [
    {},
    {
      "label": "high-contrast",
      "beforeScript": "scripts/a11y-high-contrast.js"
    },
    {
      "label": "window-open",
      "beforeScript": "scripts/a11y-open-window.js"
    },
    {
      "label": "snap-overlay",
      "beforeScript": "scripts/a11y-snap-overlay.js"
    },
    {
      "label": "desktop-menu",
      "beforeScript": "scripts/a11y-open-desktop-menu.js"
    },
    {
      "label": "taskbar-menu",
      "beforeScript": "scripts/a11y-open-taskbar-menu.js"
    }
  ]
}
