{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/"
      ],
      "numberOfRuns": 2,
      "startServerCommand": "yarn start --hostname 0.0.0.0 --port 3000",
      "startServerReadyPattern": "ready - started server on",
      "buildCommand": "yarn build"
    },
    "assert": {
      "assertions": {
        "cumulative-layout-shift": [
          "error",
          {
            "maxNumericValue": 0.1,
            "aggregationMethod": "median"
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./.lighthouse"
    }
  }
}
