{
  "ci": {
    "collect": {
      "url": [
        "http://127.0.0.1:3000/",
        "http://127.0.0.1:3000/dummy-form",
        "http://127.0.0.1:3000/video-gallery",
        "http://127.0.0.1:3000/profile"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop",
        "formFactor": "desktop",
        "screenEmulation": {
          "mobile": false
        },
        "throttlingMethod": "devtools",
        "saveAssets": true,
        "chromeFlags": "--disable-dev-shm-usage --no-sandbox"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "metrics/lcp": [
          "error",
          {
            "maxNumericValue": 2000,
            "aggregationMethod": "median"
          }
        ],
        "metrics/interactive": [
          "error",
          {
            "maxNumericValue": 2500,
            "aggregationMethod": "median"
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./lhci-report",
      "reportFilenamePattern": "%%PATHNAME%%-%%DATETIME%%.%%EXTENSION%%"
    }
  }
}
