# -----------------------------------------------------------------------------
# Public toggles exposed to the browser
# -----------------------------------------------------------------------------
# Enable Google Analytics + Vercel Analytics events from the client. Keep this
# false for local development to avoid polluting production metrics.
NEXT_PUBLIC_ENABLE_ANALYTICS=false
# Optional label for surfaced environment banners ("development", "preview",
# "production"). Leave blank when running locally.
NEXT_PUBLIC_VERCEL_ENV=
# When true, the UI swaps potentially sensitive data for safe demo content.
# Defaults to false locally so you can exercise live flows.
NEXT_PUBLIC_DEMO_MODE=false
# Gate experimental UI affordances. Leave disabled unless you are explicitly
# validating new UI behaviour.
NEXT_PUBLIC_UI_EXPERIMENTS=false
# Hint to the UI that static export mode is active and API routes are offline.
# Set to true during `yarn export`.
NEXT_PUBLIC_STATIC_EXPORT=false
# Display a beta badge in the desktop chrome when non-empty ("true" or "1").
NEXT_PUBLIC_SHOW_BETA=

# -----------------------------------------------------------------------------
# Client-only integrations (public keys)
# -----------------------------------------------------------------------------
# GA4 measurement ID (format: G-XXXXXXXX). Leave blank to fully disable GA4.
NEXT_PUBLIC_TRACKING_ID=
# EmailJS public keys used by the contact/Gedit app.
NEXT_PUBLIC_USER_ID=
NEXT_PUBLIC_SERVICE_ID=
NEXT_PUBLIC_TEMPLATE_ID=
# ReCAPTCHA site key rendered in the contact form. Leave blank to hide the
# captcha widget entirely.
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
# Optional API key for the YouTube integration. Without it, the app will fall
# back to static demo search results.
NEXT_PUBLIC_YOUTUBE_API_KEY=
# Optional currency API endpoint used by finance utilities. Leave empty to skip
# live exchange-rate lookups.
NEXT_PUBLIC_CURRENCY_API_URL=
# Optional URLs for hosted Ghidra Web or WASM builds. Leave unset to rely on
# bundled demos only.
NEXT_PUBLIC_GHIDRA_WASM=
NEXT_PUBLIC_GHIDRA_URL=

# -----------------------------------------------------------------------------
# Feature flags for simulated security tools
# -----------------------------------------------------------------------------
# Master toggle for server-side tool API stubs ("enabled" | "disabled"). Keep
# disabled unless you have configured the backing demo routes.
FEATURE_TOOL_APIS=disabled
# Specific toggle for the Hydra password-auditing demo API.
FEATURE_HYDRA=disabled

# -----------------------------------------------------------------------------
# Server-side secrets (never commit real values)
# -----------------------------------------------------------------------------
# ReCAPTCHA secret used to verify contact form submissions on the server.
RECAPTCHA_SECRET=
# Shared secret required to read admin messages through the protected API.
ADMIN_READ_KEY=
# Supabase credentials. Leave blank to disable Supabase-backed features.
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
