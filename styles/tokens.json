{
  "colors": {
    "background": "#050b16",
    "backgroundRaised": "#0b1526",
    "surface": "#0f1d33",
    "surfaceMuted": "#15263f",
    "surfaceHover": "#1b3352",
    "surfaceContrast": "#0a111f",
    "chrome": "#081326",
    "chromeMuted": "#112238",
    "chromeActive": "#0f9bdb",
    "borderSubtle": "#1a2c45",
    "borderStrong": "#1f3b5b",
    "borderAccent": "#1780b7",
    "accentPrimary": "#0f9bdb",
    "accentSecondary": "#3b82f6",
    "accentWarm": "#f97316",
    "accentGlow": "#38bdf8",
    "success": "#10b981",
    "warning": "#f59e0b",
    "danger": "#ef4444",
    "terminal": "#36ff9f",
    "textPrimary": "#f1f7ff",
    "textSecondary": "#c0d0e5",
    "textMuted": "#94a3b8",
    "textInverted": "#04070d"
  },
  "overlays": {
    "glass": "rgba(7, 15, 33, 0.72)",
    "backdrop": "rgba(4, 11, 22, 0.85)"
  },
  "spacing": {
    "3xs": "0.125rem",
    "2xs": "0.25rem",
    "xs": "0.5rem",
    "sm": "0.75rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },
  "radii": {
    "xs": "4px",
    "sm": "6px",
    "md": "10px",
    "lg": "14px",
    "xl": "18px",
    "pill": "9999px"
  },
  "shadows": {
    "focus": "0 0 0 3px rgba(15, 155, 219, 0.55)",
    "window": "0 24px 64px -32px rgba(8, 20, 40, 0.95), 0 0 0 1px rgba(15, 155, 219, 0.08)",
    "popover": "0 18px 48px -32px rgba(7, 17, 33, 0.9)",
    "glow": "0 0 0 1px rgba(56, 189, 248, 0.3)"
  },
  "typography": {
    "families": {
      "sans": "'Ubuntu', 'Inter', 'Segoe UI', sans-serif",
      "mono": "'Fira Code', 'Source Code Pro', 'SFMono-Regular', monospace"
    },
    "sizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "md": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "display": "clamp(2.5rem, 5vw, 3.5rem)"
    },
    "lineHeights": {
      "tight": "1.2",
      "snug": "1.35",
      "normal": "1.55",
      "relaxed": "1.8"
    },
    "weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    }
  },
  "focus": {
    "color": "accentPrimary",
    "width": "2px",
    "offset": "2px"
  },
  "motion": {
    "fast": "150ms",
    "medium": "250ms",
    "slow": "400ms"
  },
  "misc": {
    "hitArea": "32px"
  },
  "modes": [
    {
      "name": "dark",
      "selector": "html[data-theme='dark']",
      "colors": {
        "background": "#02070f",
        "surface": "#0b1626",
        "surfaceMuted": "#14253d",
        "chrome": "#050f1d",
        "textPrimary": "#f5f9ff",
        "textSecondary": "#c6d5ea"
      }
    },
    {
      "name": "neon",
      "selector": "html[data-theme='neon']",
      "colors": {
        "background": "#020202",
        "surface": "#0b0b0b",
        "surfaceMuted": "#111111",
        "chrome": "#1a1a1a",
        "accentPrimary": "#39ff14",
        "accentSecondary": "#ff00ff",
        "textPrimary": "#ffffff",
        "textSecondary": "#d1ffd1"
      }
    },
    {
      "name": "matrix",
      "selector": "html[data-theme='matrix']",
      "colors": {
        "background": "#000000",
        "surface": "#001100",
        "surfaceMuted": "#002200",
        "chrome": "#003300",
        "accentPrimary": "#00ff00",
        "accentSecondary": "#39ff14",
        "textPrimary": "#00ff00",
        "textSecondary": "#39ff14"
      }
    },
    {
      "name": "highContrast",
      "selector": ".high-contrast",
      "colors": {
        "background": "#000000",
        "surface": "#000000",
        "surfaceMuted": "#111111",
        "chrome": "#000000",
        "accentPrimary": "#ffff00",
        "accentSecondary": "#00ffff",
        "textPrimary": "#ffffff",
        "textSecondary": "#ffffff"
      }
    },
    {
      "name": "dyslexia",
      "selector": ".dyslexia",
      "typography": {
        "families": {
          "sans": "'OpenDyslexic', 'Comic Sans MS', Arial, sans-serif"
        }
      }
    },
    {
      "name": "largeHitArea",
      "selector": ".large-hit-area",
      "misc": {
        "hitArea": "48px"
      }
    },
    {
      "name": "reducedMotion",
      "selector": ".reduced-motion",
      "motion": {
        "fast": "0ms",
        "medium": "0ms",
        "slow": "0ms"
      }
    }
  ],
  "media": [
    {
      "query": "(prefers-reduced-motion: reduce)",
      "motion": {
        "fast": "0ms",
        "medium": "0ms",
        "slow": "0ms"
      }
    }
  ],
  "legacyColorMap": {
    "ubGrey": "surface",
    "ubWarmGrey": "surfaceMuted",
    "ubCoolGrey": "surfaceMuted",
    "ubOrange": "accentPrimary",
    "ubLiteAbrgn": "surfaceContrast",
    "ubMedAbrgn": "surface",
    "ubDrkAbrgn": "background",
    "ubWindowTitle": "chrome",
    "ubWindowTitleActive": "chromeActive",
    "ubGeditDark": "chromeMuted",
    "ubGeditLight": "accentSecondary",
    "ubGeditDarker": "surfaceHover",
    "ubtGrey": "textSecondary",
    "ubtWarmGrey": "textMuted",
    "ubtCoolGrey": "textMuted",
    "ubtBlue": "accentSecondary",
    "ubtGreen": "success",
    "ubtGeditOrange": "accentWarm",
    "ubtGeditBlue": "accentSecondary",
    "ubtGeditDark": "chrome",
    "ubBorderOrange": "borderAccent",
    "ubDarkGrey": "borderSubtle",
    "ubBlack": "background",
    "ubGreen": "success",
    "ubRed": "danger",
    "ubYellow": "warning"
  }
}
